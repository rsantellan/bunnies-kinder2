<div class="col-md-5">
      <section class="panel">
        <div class="panel-heading">{% trans %}progenitor_filter_title{% endtrans %}</div>
        <div class="panel-body no-padding">
          <form role="form" class="form-horizontal" method="get" action="{{ path('admin_progenitor_search')}}">
              <div class="form-group">
                  {{ form_errors(filter.nombre) }}
                  <label class="col-sm-2 control-label" for="{{ filter.nombre.vars.id }}">{% trans %}progenitor_name{% endtrans %}</label>
                  <div class="col-sm-10">
                      {{ form_widget(filter.nombre, {'attr' : {'class' : 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group">
                  {{ form_errors(filter.email) }}
                  <label class="col-sm-2 control-label" for="{{ filter.email.vars.id }}">{% trans %}progenitor_email{% endtrans %}</label>
                  <div class="col-sm-10">
                      {{ form_widget(filter.email, {'attr' : {'class' : 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                      <button class="btn btn-default" type="submit">Buscar</button>
                  </div>
              </div>
                  {{ form_rest(filter) }}
          </form>
      </div>
  </div>
</div>
