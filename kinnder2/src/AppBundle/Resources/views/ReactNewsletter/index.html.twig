<!doctype html>
<html class="no-js" lang="">

  <head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="description" content="Flat, Clean, Responsive, admin template built with bootstrap 3">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
    <!-- /meta -->

    <title>Bunnies Kinder Administrador</title>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">

    <!-- page level plugin styles -->
    {% block pagestylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/vendor/offline/theme.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/vendor/pace/theme.css') }}">
    <!-- /page level plugin styles -->

    <!-- core styles -->
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/css/animate.min.css') }}">
    <!-- /core styles -->

    <!-- template styles -->
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/css/skins/palette.6.css') }}" id="skin">
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/css/fonts/style.1.css') }}" id="font">
    <link rel="stylesheet" href="{{ asset('bundles/app/admin/css/main.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/maithnewsletter/admin/vendor/toastr/toastr.css') }}">
    <!-- template styles -->
	{% block stylesheets %}{% endblock %}
  </head>

  <!-- body -->

  <body>
    <div class="app horizontal">
	  <!-- top header -->
	  <header class="header header-fixed navbar">

		<div class="brand">
		  <a href="javascript:;" class="fa fa-bars off-left visible-xs" data-toggle="off-canvas" data-move="ltr"></a>
		  <a href="{{ path('admin_index')}}" class="navbar-brand text-white">
			<i class="fa fa-stop mg-r-sm"></i>
			<span class="heading-font">
			  <b>Bunnies</b> Kinder
			</span>
		  </a>
		</div>

		{{ include('AppBundle:Admin:menu.html.twig') }}

		{{ include('AppBundle:Admin:userheader.html.twig') }}

	  </header>
	  <!-- /top header -->

	  <section class="layout">
		{% block profileinfo %}

		{% endblock %}

		<!-- Emails like Sidebars datas -->

		{% block emailssidebars %}

		{% endblock %}

		<!-- main content -->
		<section class="main-content">

		  <!-- content wrapper -->
		  <div class="content-wrap">
            {% if app.session.flashbag.has('notif-success') or app.session.flashbag.has('notif-info') or app.session.flashbag.has('notif-warning')  or app.session.flashbag.has('notif-error') %}
            <div class="row">
              <div class="col-md-12">
                <section class="panel">
                <header class="panel-heading">Notificaciones</header>

                <div class="panel-body">
                    {% if app.session.flashbag.has('notif-success') %}
                    <div class="alert alert-success alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        {% for flashmessage in app.session.flashbag.get('notif-success') %}
                          {{ flashmessage}}
                        {% endfor %}
                    </div>
                    {% endif %}
                    {% if app.session.flashbag.has('notif-info') %}
                    <div class="alert alert-info alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        {% for flashmessage in app.session.flashbag.get('notif-info') %}
                          {{ flashmessage}}
                        {% endfor %}
                    </div>
                    {% endif %}
                    {% if app.session.flashbag.has('notif-warning') %}
                    <div class="alert alert-warning alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        {% for flashmessage in app.session.flashbag.get('notif-warning') %}
                          {{ flashmessage}}
                        {% endfor %}
                    </div>
                    {% endif %}
                    {% if app.session.flashbag.has('notif-error') %}
                    <div class="alert alert-danger alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        {% for flashmessage in app.session.flashbag.get('notif-error') %}
                          {{ flashmessage}}
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </section>
              </div>
            </div>
            {% endif %}
				{% block body %}

                <div id="newsletterContainer">
                </div>

                <div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div id="newsletterCounterContainer"></div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-6">
                            <div id="newsletterUserManageContainer"></div>
                        </div>
                        <div class="col-lg-6">
                            <div id="newsletterGroupManageContainer"></div>
                        </div>
                    </div>

                </div>

                <input type="text" value="{{ path('rnewsletter_user_count_url')}} " id="user-counter-url" />
                <input type="text" value="{{ path('rnewsletter_user_add_url')}} " id="user-add-url" />
                <input type="text" value="{{ path('admin_newsletter_download_user')}}" id="user-download-csv-url" />
                <input type="text" value="{{ path('rnewsletter_search_users')}}" id="user-search-url" />
                <input type="text" value="{{ path('rnewsletter_remove_users')}}" id="user-remove-url" />

                <input type="text" value="{{ path('rnewsletter_user_group_add')}}" id="user-group-add-url" />
                <input type="text" value="{{ path('rnewsletter_user_group_edit')}}" id="user-group-edit-url" />
                <input type="text" value="{{ path('rnewsletter_user_group_remove')}}" id="user-group-remove-url" />
                <input type="text" value="{{ path('rnewsletter_user_group_search')}}" id="user-search-groups-url" />
				{% endblock %}
		  </div>
		  <!-- /content wrapper -->
		</section>
		<!-- /main content -->
	  </section>

    </div>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="{{ asset('js/newsletter.js') }}" type="text/javascript"></script>
    <!-- /template scripts -->
	{% block javascripts %}{% endblock %}
  </body>
  <!-- /body -->

</html>
