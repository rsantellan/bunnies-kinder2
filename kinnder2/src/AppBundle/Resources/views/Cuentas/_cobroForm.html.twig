{{ form_start(form, {'attr' : {'role' : 'form',  'onsubmit' : 'return saveCobroForm(this);'}}) }}
{{ form_errors(form) }}

<div class="form-group">
  {{ form_errors(form.fecha) }}
  <label class="" for="{{ form.fecha.vars.id }}">{% trans %}account_cobro_date{% endtrans %}</label>
  <div class="">
        <div class="input-group mg-b-md input-append date datepicker" data-date="{{ form.fecha.vars.value | date('d-m-Y') }}" data-date-format="dd-mm-yyyy">
                {{ form_widget(form.fecha, {'attr' : {'class' : 'form-control'}}) }}
                <span class="input-group-btn">
                        <button class="btn btn-white add-on" type="button">
                                <i class="fa fa-calendar"></i>
                        </button>
                </span>
        </div>
  </div>
</div>
<div class="form-group">
    {{ form_errors(form.monto) }}
    <label for="{{ form.monto.vars.id }}">{% trans %}account_cobro_amount{% endtrans %}</label>
    {{ form_widget(form.monto, {'attr' : {'class' : 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_errors(form.enviado) }}
    <label for="{{ form.enviado.vars.id }}">{% trans %}account_cobro_send_now{% endtrans %}</label>
    {{ form_widget(form.enviado, {'attr' : {'class' : ''}}) }}
</div>
<div class="form-group">
  <button type="submit" class="btn btn-success">{% trans %}account_cobro_save{% endtrans %}</button>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
